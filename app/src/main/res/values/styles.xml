<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/robot_regular</item>
    </style>
    <style name="AppTheme.NoWindow">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="DefaultAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#33d9df</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:lineSpacingExtra">8dp</item>

    </style>
    <style name="MediaButton">
        <item name="background">@null</item>

    </style>
    <style name="liveButton">
        <item name="android:src">@drawable/ic_live</item>

    </style>
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
        <item name="android:src">@drawable/ic_add_black</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>
    <style name="AppTheme.Launcher" parent="AppTheme">
    <item name="android:windowBackground">@drawable/splash_screen</item>

</style>
    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.backButtonColor" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@color/white</item>
    </style>
<style name="AppTheme.Fullscreen" parent="AppTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
</style>
    <style name="progressBarWhite" parent="AppTheme">
        <item name="colorAccent">@color/white</item> <!-- Whatever color you want-->
    </style>
</resources>
