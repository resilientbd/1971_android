<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_layout_live_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"

        android:elevation="@dimen/elevation_20"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/round_image_view_live_tv"
            android:layout_width="130dp"
            android:layout_height="101dp"
            android:adjustViewBounds="true"
            android:elevation="@dimen/elevation_20"
            android:scaleType="fitXY"
            android:src="@drawable/default_category_img"
            app:riv_corner_radius="2dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_view_live_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"

            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/text_movies_item_live_tv"
            android:textColor="@color/white"
            android:textSize="@dimen/text_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/round_image_view_live_tv" />
        <TextView
            android:id="@+id/text_view_cat_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:text="@string/text_tv_series"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_live_tv_title" />

        <ProgressBar
            android:id="@+id/progress_bar_circular"
            android:layout_width="@dimen/width_30"
            android:layout_height="@dimen/width_30"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/round_image_view_live_tv"
            app:layout_constraintStart_toStartOf="@+id/round_image_view_live_tv"
            app:layout_constraintTop_toTopOf="@+id/round_image_view_live_tv"
            app:layout_constraintBottom_toBottomOf="@+id/round_image_view_live_tv"/>

    </android.support.constraint.ConstraintLayout>


</layout>