<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:src="@drawable/ic_back"
            android:elevation="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:textColor="@color/white"
            android:textSize="22dp"
            ads:layout_constraintBottom_toBottomOf="@+id/imageView2"
            android:layout_marginLeft="20dp"
            ads:layout_constraintStart_toEndOf="@+id/imageView2"
            ads:layout_constraintTop_toTopOf="@+id/imageView2" />

        <android.support.design.widget.TabLayout
            android:id="@+id/category_tab_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            ads:brv_emptyLayoutId="@id/emptyLayoutId"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintTop_toBottomOf="@+id/title"
            ads:tabMode="scrollable"
            ads:tabSelectedTextColor="@color/white"
            ads:tabTextColor="@color/tab_default_color"></android.support.design.widget.TabLayout>

        <com.w3engineers.ext.strom.application.ui.widget.BaseRecyclerView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/videos_recyclerview"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:clipToPadding="false"
            android:paddingTop="20dp"
            ads:brv_emptyLayoutId="@id/emptyLayoutId"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintTop_toBottomOf="@id/category_tab_layout"

            ads:layout_constraintBottom_toBottomOf="parent"
            />


        <TextView
            android:id="@+id/emptyLayoutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>