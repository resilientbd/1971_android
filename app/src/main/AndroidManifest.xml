<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shadowhite.archieve1971">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />



    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup,android:label,android:supportsRtl">
        <activity android:name="com.shadowhite.archieve1971.ui.contactus.ContactUsActivity"></activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/sample_app_id" />
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />

        <activity
            android:name="com.shadowhite.archieve1971.ui.videodetails.VideoDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.signup.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.home.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Launcher"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shadowhite.archieve1971.ui.channellist.ChannelListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.setting.SettingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.seeallvideos.SeeAllVideosActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.editprofile.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.myprofile.MyProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.searchmovies.SearchMoviesActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.forgotpassword.ForgotPasswordActivity"
            android:screenOrientation="portrait" />

        <service android:name="com.shadowhite.util.VideonFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!--
        <service android:name="com.w3engineers.core.util.VideonInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        -->
        <service android:name="com.shadowhite.util.MyJobService" /> <!-- The activity below is needed while cropping images -->
        <activity android:name="com.shadowhite.archieve1971.ui.aboutus.AboutUsActivity" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.privacypolicy.PrivacyPolicyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.empty.EmptyActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.shadowhite.archieve1971.ui.inputpin.InputPinActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.createnewpassword.CreateNewPasswordActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.welcome.WelcomeActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.loadingerror.LoadingErrorActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.downloadmanager.DownloadManagerActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.videos.VideosActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.images.ImageActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.audio.AudioActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.document.DocumentActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.documentdetails.DocumentDetailsActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.audiodetails.AudioDetailsActivity" />
        <activity android:name="com.shadowhite.archieve1971.ui.imagedetails.ImageDetailsActivity" />
        <activity
            android:name="com.shadowhite.archieve1971.ui.fullscreenactivity.FullScreeActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Fullscreen" />
        <activity android:name="com.shadowhite.archieve1971.ui.imagedetails.ImageDetailsPagerActivity"/>
    </application>

</manifest>